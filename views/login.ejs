<% include partials/home %>
<div class="container">
  <div class="row ml-5 mt-5">
  <div class="col-md-5 m-auto">
      
  
    <div class="card card-body text-left">
     <form class="form-col" action="/users/login" method="POST">
    
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="eame" 
        id="email" class="form-control"
         placeholder="Enter Email" 
         value="<%= typeof email != 'undefined' ? Name : ''%>"/>        
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" 
        id="password" class="form-control"
         placeholder="Enter password" 
         value="<%= typeof  email != 'undefined' ? password : ''%>">
       
     
    <button type="submit" class="btn btn-primary mt-2">Login</button>
     </form>
     <p>Dont have a account? <a href="/users/register">register</a></p>
